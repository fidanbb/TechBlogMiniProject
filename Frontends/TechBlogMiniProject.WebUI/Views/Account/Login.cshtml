@model LoginDto

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section id="login-section">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-5 mb-3 mb-lg-0">
                <div class="login-form">
                    <h4>Login</h4>
                    <div class="text-danger" style=" text-align: left; position: relative; right: 0px; top: -4px;" asp-validation-summary="All"></div>
                    <form method="post" asp-controller="Account" asp-action="Login">
                        <div class="row">
                            <div class="col-lg-12 mb-3">
                                <div class="email">
                                    <label for="">Email</label>
                                    <input class="form-control"
                                           type="text"
                                           placeholder="Enter your email or username "
                                           asp-for="Email"/>
                                   <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="col-lg-12 mb-3">
                                <div class="password">
                                    <label for="">Password</label>
                                    <input class="form-control"
                                           type="password"
                                           placeholder="Enter your password"
                                           asp-for="Password"/>
                                    <i class="fa-regular fa-eye eyes"></i>
                                    <span class="text-danger" asp-validation-for="Password"></span>

                                </div>
                            </div>



                            <div class="col-md-12 mb-3">
                                <div class="reg-btn">
                                    <button type="submit" class="btn">Login</button>
                                </div>
                            </div>

                            <div class="col-lg-12 mb-3">
                                <div class="account">
                                    <p>
                                        Don't have an account?
                                        <a href="/Account/Register/">Register</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

