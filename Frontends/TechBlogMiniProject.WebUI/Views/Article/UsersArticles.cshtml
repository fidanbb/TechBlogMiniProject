@model List<GetAllArticlesDto>

@{
    ViewData["Title"] = "UsersArticles";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @if(Model.Count == 0)
            {
                <div class="alert alert-info" role="alert">
                   You don't have any posted article!
                </div>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="article-wrap rounded ftco-animate">
                            <div class="img rounded d-flex align-items-end" style="background-image: url('@item.ImageUrl');">
                            </div>
                            <div class="text">
                                <h2 class="mb-0"><a href="/Article/ArticleDetail/@item.ArticleID/">@item.Title.Substring(0, 20) ...</a></h2>
                                <div class="d-flex mb-3">
                                    <span class="cat">@item.CategoryName</span>
                                    <p class="date ml-auto">@item.CreatedDate.ToString("dd MMM, yyyy")</p>
                                </div>
                                <p class="d-flex mb-2 d-block"><a href="/Article/ArticleDetail/@item.ArticleID/" class="btn btn-primary py-2 w-100 mr-1">Read More</a> </p>
                                <p class="d-flex mb-0 d-block"><a href="/Article/EditArticle/@item.ArticleID/" class="btn btn-warning py-2 mr-1">Edit</a> <a href="/Article/DeleteArticle/@item.ArticleID/" class="btn btn-danger py-2 mr-1">Delete</a> </p>

                            </div>
                        </div>
                    </div>

                }
            }
           


        </div>
    </div>

</section>


