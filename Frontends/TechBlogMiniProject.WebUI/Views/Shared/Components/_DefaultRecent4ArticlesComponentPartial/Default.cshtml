@model List<GetLast4ArticlesDtos>

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading">What We Offer</span>
                <h2 class="mb-2">Featured Articles</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="carousel-car owl-carousel">
                    @foreach (var item in Model)
                    {
                        <div class="item">
                            <div class="article-wrap rounded ftco-animate">
                                <div class="img rounded d-flex align-items-end" style="background-image: url('@item.ImageUrl');">
                                </div>
                                <div class="text">
                                    <h2 class="mb-0"><a href="/Article/ArticleDetail/@item.ArticleID/">@item.Title.Substring(0,20) ...</a></h2>
                                    <div class="d-flex mb-3">
                                        <span class="cat">@item.CategoryName</span>
                                        <p class="date ml-auto">@item.CreatedDate.ToString("dd MMM, yyyy")</p>
                                    </div>
                                    <p class="d-flex mb-0 d-block"><a href="/Article/ArticleDetail/@item.ArticleID/" class="btn btn-primary py-2 mr-1">Read More</a> </p>
                                </div>
                            </div>
                        </div>

                    }

                    
                </div>
            </div>
        </div>
    </div>
</section>